<h1><%= @user.prename @user.lname%></h1>

<p><%= @user.fname @user.lname%></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@user) %></li>
  <li><%= link_to "Destroy", article_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Add a Degree: </h2>
<%= form_with model: [ @user, @user.degrees.build ] do |form| %>
  <p>
    <%= form.label :"School Name" %><br>
    <%= form.text_field :schoolname %>
  </p>
  <p>
    <%= form.label :"Start Date" %><br>
    <%= form.date_field :sdate %>
  </p>
  <p>
    <%= form.label :"Education Level" %><br>
    <%= form.text_field :educationlevel %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <% end %>